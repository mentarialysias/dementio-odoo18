<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="class_view_form" model="ir.ui.view">
            <field name="name">Schedule.view.form</field>
            <field name="model">schedule.line</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <label for="start_time" string="Schedule"/>
                            <div>
                                <field name="start_time" required="1" class="oe_inline" widget="daterange" options="{'end_date_field': 'end_time'}" />
                            </div>

                        </group>
                        <group>
                            <field name="duration"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    

    </data>

    
</odoo>