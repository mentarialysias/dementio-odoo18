<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="res_bus_view_list" model="ir.ui.view">
            <field name="name">res.bus.view.list</field>
            <field name="model">res.bus</field>
            <field name="arch" type="xml">
                <list string="Bus List View">
                    <field name="name" />
                    <field name="code" />
                    <field name="capacity" />
                    <field name="image" />
                </list>
            </field>
        </record>

        <record id="res_bus_view_form" model="ir.ui.view">
            <field name="name">res.bus.view.form</field>
            <field name="model">res.bus</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Bus Name" />
                            </h1>
                        </div>
                        <group string="Bus Info">
                            <group>
                                <field name="code" />
                            </group>
                            <group>
                                <field name="capacity" />
                                <field name="image" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    </data>


</odoo>